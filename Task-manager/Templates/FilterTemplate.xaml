<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="FilterTemplate">
        <Grid Margin="0,0,0,607">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding FirstFilter}"/>
            <TextBox Grid.Column="1" Text="{Binding SecondFilter}"/>
            <TextBox Grid.Column="2" Text="{Binding ThirdFilter}"/>
            <TextBox Grid.Column="3" Text="{Binding FourthFilter}"/>
            <Button Grid.Column="4" Content="Filter" Command="{Binding FilterCommand}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>